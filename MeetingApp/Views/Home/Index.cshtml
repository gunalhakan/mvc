
<!--
    Bir model olarak veri geldiğinde bu tanımlama yapılır. 
    @* model string *@
    -->
@model MeetingInfo
@{
    Layout = "_Layout2";
}

<!-- <h1 class="h4">@Model</h1> -->
<!-- <h1 class="h4">@ViewBag.selam - @ViewBag.username</h1> -->
<!-- <h1 class="h4">@ViewData["selam"] - @ViewData["username"]</h1> -->
<main class="text-center">

    <h1 class="h4"> Merhaba </h1>
    <p>Toplantı katılım durumunuzu bildiriniz.</p>
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Model.Location</li>
            <li class="list-group-item">@Model.Date.ToString("dd/MM/yyy") gününde gerçekleşecek</li>
            <li class="list-group-item">Başvuru Sayısı : @Model.NumberOfPeople</li>
            
        </ul>
    </div>
    
    <a asp-controller="Meeting" asp-action="Apply" class="btn btn-sm btn-outline-primary">Başvuru Yap</a>
</main>
