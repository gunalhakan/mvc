@using CourseRegister.Models
@model Candidate

<h2>Application Submitted</h2>
<div>
    <h3 class="display-4">Congratulations @Model.FullName</h3>
    <p class="lead">Your application has been <mark>submitted successfully!</mark></p>
    <p class="lead">Many thanks for your interest in our courses.</p>
    <p>Age: @Model.Age</p>
    <blockquote class="blockquote">
        <p class="lead">You have enrolled to @Model.SelectedCourse</p>
    </blockquote>
    <p class="text-muted">You applied at @Model.ApplyAt </p>
    <div class="btn-group">
        <a class="btn btn-outline-success" href="Index">Applications</a>
        <a class="btn btn-success" asp-controller="Home" asp-action="Index">Home</a>

    </div>
</div>